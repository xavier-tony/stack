{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@stack/assets": ["libs/assets/src/index.ts"],
      "@stack/auth": ["libs/auth/src/index.ts"],
      "@stack/auth/forgot-password": [
        "libs/auth/src/lib/forgot-password/index.ts"
      ],
      "@stack/auth/login": ["libs/auth/src/lib/login/index.ts"],
      "@stack/auth/logout": ["libs/auth/src/lib/logout/index.ts"],
      "@stack/auth/signup": ["libs/auth/src/lib/signup/index.ts"],
      "@stack/database": ["libs/database/src/index.ts"],
      "@stack/mock-server": ["libs/mock-server/src/index.ts"],
      "@stack/models": ["libs/models/src/index.ts"],
      "@stack/out-school": ["apps/out-school/src/index.ts"],
      "@stack/services": ["libs/services/src/index.ts"],
      "@stack/shared/components": ["libs/shared/components/src/index.ts"],
      "@stack/shared/ui-kit": ["libs/shared/ui-kit/src/index.ts"],
      "@stack/dashboard":["libs/shared/components/src/lib/dashboard/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
